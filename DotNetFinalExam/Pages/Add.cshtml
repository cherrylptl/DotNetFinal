@page
@model AddModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border rounded border-2 p-4">
                <h2 class="text-center mb-4">Add New Item</h2>

                <form method="post">
                    <div class="form-group mb-4">
                        <label for="reservationCarId">Select a Item:</label>
                        <select id="reservationCarId" class="form-control" asp-for="Item!.ItemName" required>
                            <option value="">-- Select Item --</option>
                            @foreach (var item in Model.ItemList)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        <span asp-validation-for="Item!.ItemName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="itemCost">Item Cost:</label>
                        <input id="itemCost" class="form-control" type="number" asp-for="Item!.ItemPricePerUnit"
                            placeholder="Item Cost" required>
                        <span asp-validation-for="Item!.ItemPricePerUnit" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="itemQuantity">Item Quantity:</label>
                        <input id="itemQuantity" class="form-control" type="number" asp-for="Item!.ItemQuantityInStock"
                            placeholder="Item Quantity" required>
                        <span asp-validation-for="Item!.ItemQuantityInStock" class="text-danger"></span>
                    </div>
                    <div class="row mt-5">
                        <button type="submit" class="btn btn-primary btn-lg ">Add Item</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>